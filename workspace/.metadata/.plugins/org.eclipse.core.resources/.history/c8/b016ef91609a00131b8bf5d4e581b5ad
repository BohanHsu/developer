package linkedListCycle;

// Definition for singly-linked list.
class ListNode {
	int val;
	ListNode next;

	ListNode(int x) {
		val = x;
		next = null;
	}
}

public class Solution {
	public boolean hasCycle(ListNode head) {
		if (head == null) {
			return false;
		}

		ListNode f = head;
		ListNode s = head;

		while (s.next != null) {

			if (f.next == null) {
				// fast reach the end
				return false;
			} else {
				f = f.next;
				if (f.next == null) {
					// fast reach the end
					return false;
				} else {
					f = f.next;
				}
			}
			s = s.next;

			// the fast and slow are point to same node
			if (s == f) {
				// there is a loop
				return true;
			}
		}
		return false;

	}
}