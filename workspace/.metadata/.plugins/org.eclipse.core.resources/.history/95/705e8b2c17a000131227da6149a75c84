package algo_probs;

public class CommonLeastAncestor {
	// the top down approach
	public Node claTD(Node root, Node a, Node b){
		Node cla = null;
		if (root == null){
			return null;
		}
		
		if (root == a || root == b){
			return root;
		}
		
		Node l = root.left;
		Node r = root.right;
		
		l = claTD(l,a,b);
		r = claTD(r,a,b);
		
		if (l != null && r != null){
			return root;
		}else{
			if (l == null){
				return r;
			}else{
				return l;
			}
		}
		
	}
}

class Node{
	int val;
	public Node(int val) {
		this.val = val;
	}
	
	Node left;
	Node right;
}
