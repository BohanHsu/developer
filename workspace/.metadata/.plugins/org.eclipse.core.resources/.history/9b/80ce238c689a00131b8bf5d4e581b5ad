package wordBreak;

public class Solution {
    public boolean wordBreak(String s, Set<String> dict) {
        int min = Integer.MAX_VALUE; // the minimum length in dict
        int max = Integer.MIN_VALEU; // the maximum length in dict
        int len = 0;
        // set the min and max
        for (String s : dict){
            len = s.length();
            if (len < min){
                // set the min
                min = len;
            }
            if (len > max){
                // set the max
                max = len;
            }
        }
        
        boolean result = false;
        String word = null;
        String remain = null;
        len = s.length();
        max = max + 1;
        
        for (int i = min + 1, i <= max, i++){
            String word = s.subString(0,i);
            String remain = s.subString(i,len);
            result = dict.contains(word) && wordBreak(dict);
            if (result == true){
                return result;
            }
        }
        
    }
}
