package maxPointsonaLine;

/**
 * Definition for a point.
 * class Point {
 *     int x;
 *     int y;
 *     Point() { x = 0; y = 0; }
 *     Point(int a, int b) { x = a; y = b; }
 * }
 */
public class Solution {
    public int maxPoints(Point[] points) {
        int maxX = Integer.MIN_VALUE;
        int minX = Integer.MAX_VALUE;
        int maxY = maxX;
        int minY = minX;
        
        Point p = null;
        for (int i = 0; i<points.lengthï¼›i++){
            p = points[i];
            if (p.x > maxX){
                maxX = p.x;
            }
            if (p.x < minX){
                minX = p.x
            }
            if (p.y > maxY){
                maxY = p.y;
            }
            if (p.y < minY){
                minY = p.y;
            }
        }
        
        int maxN = 0;
        
        for (int i = minX; i <= maxX; i++){
            int count = 0;
            for (int j = 0; j < points.length; j++){
                if (points[j].x = i){
                    count++;
                }
            }
            if(count > maxN){
                maxN = count;
            }
        }
        
        for (int i = minY; i <= maxY; i++){
            int count = 0;
            for (int j = 0; j < points.length; j++){
                if (points[j].x = i){
                    count++;
                }
            }
            if(count > maxN){
                maxN = count;
            }
        }
        
        return maxN;
    }
}