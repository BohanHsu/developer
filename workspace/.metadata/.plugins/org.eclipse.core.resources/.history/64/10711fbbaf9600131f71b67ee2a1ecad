package excel;

import graph.Node;

import java.util.ArrayList;
import java.util.HashMap;

import jxl.Workbook;
import jxl.read.biff.File;
import jxl.write.WritableWorkbook;

public class Tables {
	ArrayList<Table> tables = new ArrayList<Table>();
	String path = null;
	
	int line = 0;
	
	public Tables(String path) {
		super();
		this.path = path;
	}

	public void addTable(Table t){
		this.tables.add(t);
	}
	
	public void toFile(){
		for (Table table : tables) {
			
		}
	}
	
	private void tableToFile (Table table) throws Exception{
		ArrayList<String> colName = table.getColumnName();
		ArrayList<HashMap<Integer, Double>> dist = table.getDistArray();
		ArrayList<HashMap<Integer, Integer>> prev = table.getPrevArray();
		ArrayList<Node> fc = table.getFirstColunm();
		
		
		WritableWorkbook wb;
		wb = Workbook.createWorkbook(new File(path), null);
	}
}
