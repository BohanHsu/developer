package binaryTreePreorderTraversal;

import java.util.ArrayList;

//to copy
import java.util.Stack;

//Definition for binary tree
class TreeNode {
	int val;
	TreeNode left;
	TreeNode right;

	TreeNode(int x) {
		val = x;
	}
	
	@Override
	public String toString() {
		// TODO Auto-generated method stub
		return val+"";
	}
}

public class Solution {
    private Stack<TreeNode> nodes = new Stack<TreeNode>();
    private ArrayList<Integer> list = new ArrayList<Integer>();
    
    public ArrayList<Integer> preorderTraversal(TreeNode root) {
        if (root == null){
            return this.list;
        }
        
        TreeNode tn = root;
        
        while (!nodes.empty() || tn != null){
            
            while (tn != null){
                visitNode(tn);
                nodes.push(tn);
                tn = tn.left;
            }
        
            tn = nodes.pop();
            tn = tn.right;
            
        }
        return this.list;
    }
    
    /**
     * TreeNode -> Void 
     * @param tn : a TreeNode to visit
     * effect : add the tree node's value to the tail of the list
     */ 
    private void visitNode(TreeNode tn){
        this.list.add(tn.val);
    }
}