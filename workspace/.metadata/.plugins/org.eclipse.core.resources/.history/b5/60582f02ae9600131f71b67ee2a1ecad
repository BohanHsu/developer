package excel;

import graph.Node;

import java.util.ArrayList;
import java.util.HashMap;

public class Table {
	String tableName = null;
	ArrayList<Node> firstColunm = null;
	ArrayList<HashMap<Integer, Double>> distArray = new ArrayList<HashMap<Integer, Double>>();
	ArrayList<HashMap<Integer, Integer>> prevArray = new ArrayList<HashMap<Integer, Integer>>();
	ArrayList<String> columnName = new ArrayList<String>();
	
	public Table(String tableName, ArrayList<Node> firstColunm) {
		super();
		this.tableName = tableName;
		this.firstColunm = new ArrayList<Node>(firstColunm);
	}


	public void addColumn(HashMap<Integer, Double> distMap, HashMap<Integer, Integer> prevMap){
		HashMap<Integer, Double> tmpDist = new HashMap<Integer,Double>(distMap);
		HashMap<Integer, Integer> tmpPrev = new HashMap<Integer, Integer>(prevMap);
		this.distArray.add(tmpDist);
		this.prevArray.add(prevMap);
	}
}
